<?php

	class Cours
	{
		const CSS_CLASSINFO = "coursSpec";
		const CSS_CLASSNOM = "nomCours";
		
		private $nom,$nbHeures,$special;
		static $totalHeures = 0;
		
		function __construct($nom,$nbHeures,$special)
		{
			$this->nom = $nom;
			$this->nbHeures = $nbHeures;
			$this->special = $special;
			self::$totalHeures += $nbHeures;
		}
		
		function sortieSimple()
		{
			if($this->special)
				echo "<span>".$this->nom."</span pendant ".$this.->nbHeures." heures (info)\n";
			else
				echo "<span>".$this->nom."</span pendant ".$this.->nbHeures." heures\n";
		}
		
		function ratio()
		{
			return $this->nbHeures/self::$totalHeures;
		}
		
		function sortieHTML()
		{
			echo $this->sortieSimple()." ".$this->ratio();
		}
		
		function divRatio()
		{
			echo 	"<div>
						
						<div>
						
						</div>
					 </div>"
		}
	}
